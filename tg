name: Deploy Sandbox
on: [push]
jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      
      - name: Build Docker Image
        run: docker build -t sandbox:${{ github.sha }} .
      
      - name: Login to Container Registry
        run: echo ${{ secrets.DOCKER_PASS }} | docker login -u ${{ secrets.DOCKER_USER }} --password-stdin
      
      - name: Push Docker Image
        run: docker push sandbox:${{ github.sha }}
      
      - name: Setup Kubeconfig
        run: |
          echo "${{ secrets.KUBECONFIG }}" > $HOME/.kube/config
      
      - name: Deploy Sandbox to Kubernetes
        run: |
          kubectl apply -f k8s/sandbox-namespace.yaml
          kubectl set image deployment/sandbox sandbox=sandbox:${{ github.sha }} -n sandbox-namespace
          kubectl apply -f k8s/network-policy.yaml -n sandbox-namespace